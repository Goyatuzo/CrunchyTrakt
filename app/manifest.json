{
  "manifest_version": 2,
  "name": "Webtrakt",
  "description": "Extension for various websites for trakt.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "webNavigation",
    "tabs",
    "identity",
    "storage",
    "https://*.trakt.tv/*"
  ],
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.vrv.co/*"
      ],
      "js": [
        "dist/vrv.js"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{efc6225c-1b49-4d09-815f-60394c47610b}"
    }
  }  
}