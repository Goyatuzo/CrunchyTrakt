{
  "manifest_version": 2,
  "name": "CrunchyTrakt",
  "description": "Add the ability to sync Crunchyroll history to Trakt.",
  "version": "0.0",
  "permissions": [
    "activeTab",
    "tabs",
    "identity",
    "storage",
    "cookies",
    "*://*.crunchyroll.com/*",
    "*://*.trakt.tv/*"
  ],
  "page_action": {
    "default_icon": "images/icons/valid-site.svg",
    "default_popup": "dist/index.html"
  },
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  }
}