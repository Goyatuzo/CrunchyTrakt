{
  "manifest_version": 2,

  "name": "Webtrakt",
  "description": "Extension for various websites for trakt.",
  "version": "1.0",

  //"browser_action": {
  //  "default_icon": "icon.png",
  //  "default_popup": "popup.html"
  //},
  "permissions": [
    "activeTab",
    "webNavigation",
    "https://ajax.googleapis.com/"
  ],
  "background": {
    "scripts": [
      "dist/background.js"
    ]
  },
  "content_scripts": [
      {
          "matches": [
            "*://*.vrv.co/*"
          ],
          "js": [
            "dist/vrv.js"
          ]
      }
  ]
}